{% extends "basePrivate.html.twig" %}


{% block body %}
     <div class="container-fluid rounded bg-light p-3">
        
        <h2 class="p-3">Dodaj artykuł</h2>
        {% for label, messages in app.flashes %}
			<div class="alert alert-success col-md-8 mx-auto text-center" role="alert">
				{% for message in messages %}
					<div class="flash-{{ label }}">
						{{ message }}
					</div>
				{% endfor %}
			</div>
		{% endfor %}    

         {{ form_start(newsForm) }}
            <div class="d-flex flex-column align-items-center">
                <div class="mb-auto p-2 col-md-8">
                    {{ form_row(newsForm.topic) }}
                </div>
                <div class="mb-auto p-2 col-md-8" >
                    {{ form_row(newsForm.content) }}
                </div>
                <div class="d-flex flex-row justify-content-center p-3">
                    <button type="submit" class="btn btn-primary">Zapisz artykuł</button>
                </div>
            </div>
		{{ form_end(newsForm) }}
    </div>

{% endblock %}