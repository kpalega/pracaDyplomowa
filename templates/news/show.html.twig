{% extends "basePrivate.html.twig" %}



{% block body %}
     <div class="container-fluid rounded bg-primary bg-opacity-25 p-3">
        
        <div class="d-flex flex-column">
            <div class="d-flex flex-row justify-content-between">
                <div class="d-flex flex-column align-items-start">
                    <div class="mb-auto">
                        <h2 class="p-3 ">{{news.topic}}</h2>
                    </div>
                    <div class="mb-auto">
                        <h6 class="px-4 text-muted"> {{news.date|date('Y-m-d  H:i:s')}} <h6>
                    </div>
                </div>
                
                <div class="p-3 ">
                     <h6 class="p-3">{{news.iduser.name}} {{news.iduser.surname}}</h6>
                </div>
            </div>
            
            <hr>
           
            <div class="container rounded bg-light w-75 p-3">
                {{news.content|raw}}
            </div>

            
        </div>
    </div>

    {% endblock %}