{% extends "basePrivate.html.twig" %}


{% block body %}
     <div class="container-fluid rounded bg-light p-3">
        
        <div class="d-flex flex-column ">
            <div class="d-flex flex-row justify-content-between my-3">
                <div class="mb-auto">
                    <h2 class="p-3">Szczegóły grupy {{group.name}}</h2>
                </div>
                <div class="mb-auto">
                    <h5 class="p-3 my-2 text-muted">Grupa aktywna: 
                        {% if group.active is same as true %} Tak
                        {% else %} Zaarchiwowana
                        {% endif %}
                    </h5>
                </div>
            </div>
            
   
            <div class="d-flex flex-row justify-content-between px-4">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Imię</th>
                            <th scope="col">Nazwisko</th>
                            <th scope="col">Aktywny</th>
                            <th scope="col">Niepełnosprawność</th>
                            <th scope="col">Oświadczenie</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for child in children %}
                            <tr class="{% if child.active is same as false %} table-active {% endif %}">
                                <td>{{child.name}}</td>
                                <td>{{child.surname}}</td>
                                <td class="text-center">
                                    {% if child.active is same as true %} <span><i class="bi bi-check-circle-fill text-success" style="font-size: 1.2rem; "></i></span>
                                    {% else %} <i class="bi bi-x-circle-fill text-danger" style="font-size: 1.2rem; "></i>
                                    {% endif %}
                                </td>
                                <td>
                                    {% for disability in child.iddisability %}
                                        {{ disability.name }}
                                    {% endfor %}
                                </td>
                                <td>
                                    {% for disability in child.iddisability %}
                                        {{ disability.decision }}
                                    {% endfor %}
                                </td>
                                <td>
                                    {% if child.active is same as true %} 
                                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                            Zaarchiwizuj
                                        </button>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>

{% endblock %}

